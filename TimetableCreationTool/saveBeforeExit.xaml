<Window x:Class="TimetableCreationTool.saveBeforeExit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimetableCreationTool"
        mc:Ignorable="d"
        Title="saveBeforeExit" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Do you want to save before exiting,&#10; any unsaved data will be lost." HorizontalAlignment="Left" Margin="50,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.514,0.558" Height="47" Width="198"/>
        <Button x:Name="button" Content="Yes" HorizontalAlignment="Left" Margin="50,189,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button1" Content="No" HorizontalAlignment="Left" Margin="173,189,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
